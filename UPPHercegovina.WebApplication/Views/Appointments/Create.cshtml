@model UPPHercegovina.WebApplication.Models.Appointment

@{
    ViewBag.Title = "Napravi rezervaciju";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Rezervacija za proizvode</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeliveryDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeliveryDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DeliveryDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rezerviši" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PersonProduct.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonProduct.HarvestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonProduct.Neto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonProduct.Bruto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonProduct.ExparationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonProduct.Field.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonProduct.CircaValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonProduct.Value)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.PersonProducts)
    {
        <tr>
            <td>
                <label>@item.Product.Name</label>
            </td>
            <td>
                <label>@item.HarvestOnlyDate</label>
            </td>
            <td>
                <label>@item.Neto</label>
            </td>
            <td>
                <label>@item.Bruto</label>
            </td>
            <td>
                <label>@item.ExparationOnlyDate</label>
            </td>
            <td>
                <label>@item.CircaValue</label>
            </td>
            <td>
                <label>@item.Value</label>
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Nazad na listu", "Index")
</div>
