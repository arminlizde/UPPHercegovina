@model IEnumerable<UPPHercegovina.WebApplication.Models.UserMembership>

@{
    ViewBag.Title = "Memberships";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Memberships</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Membership.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysLeft)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Membership.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Membership.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfPayment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DaysLeft)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Approved)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Membership.Price)
        </td>
    </tr>
}

</table>
