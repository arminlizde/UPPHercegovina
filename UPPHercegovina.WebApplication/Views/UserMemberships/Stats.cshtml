@model IEnumerable<UPPHercegovina.WebApplication.Models.UserMembershipStatsViewModel>

@{
    ViewBag.Title = "Statistika /Članarine";
}

<h2>Statistika Članovi - Članarine</h2>
<hr />


@using (Html.BeginForm("Stats", "UserMemberships"))
{
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownList("Memberships", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    
    <input type="submit" value="Pretraga"/>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserMembership)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpiringDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DaysLeft)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserMembership)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiringDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysLeft) dana
            </td>
            <td>
                @Html.ActionLink("Izmjeni", "Edit", new { id = item.UserMembershipId }) |
                @Html.ActionLink("Detalji", "Details", new { id = item.UserMembershipId }) |
                @Html.ActionLink("Obriši", "Delete", new { id = item.UserMembershipId })
            </td>
        </tr>
    }

</table>

<p>Broj članova:  @ViewData["MembersCount"]</p>
