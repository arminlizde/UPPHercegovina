                                function initMap() {


                                    var myLatLng = {lat: @ViewBag.lat, lng: @ViewBag.lng};
                                    var myLatLngW = {lat: @ViewBag.lat2, lng: @ViewBag.lng2};


                                    var map = new google.maps.Map(document.getElementById('map'), {
                                        zoom: 8,
                                        center: myLatLng
                                    });

                                    var marker = new google.maps.Marker({
                                        position: myLatLng,
                                        map: map,
                                        title: 'Porijeklo proizvoda!',
                                        icon: 'http://maps.google.com/mapfiles/ms/icons/green-dot.png',
                                        //draggable:true
                                    });

                                    var marker2 = new google.maps.Marker({
                                        position: myLatLngW,
                                        map: map,
                                        title: 'Skladište!',
                                        //draggable:true
                                    });


                                    function displayCoordinates(pnt) {

                                        var lat = pnt.lat();
                                        lat = lat.toFixed(4);
                                        var lng = pnt.lng();
                                        lng = lng.toFixed(4);

                                    }
                                }

        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCZ0Bah24dB4oqaIN9peo9nnFAnboZjzmY&callback=initMap"
