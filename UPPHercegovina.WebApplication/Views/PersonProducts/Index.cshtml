@model IEnumerable<UPPHercegovina.WebApplication.Models.PersonProduct>

@{
    ViewBag.Title = "Proizvodi / Ponuda / Proizvođač";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Proizvodi u ponudi</h2>

<p>
    @Html.ActionLink("Dodaj novi proizvod u ponudu", "Create")
</p>

@using (Html.BeginForm("Index", "PersonProducts"))
{
    <div class="form-group">
        <div class="col-md-3">
            @Html.DropDownList("States", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <input type="submit" value="Pretraga" class="btn btn-default" />
}
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HarvestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Neto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bruto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExparationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Field.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CircaValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HarvestOnlyDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Neto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bruto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExparationOnlyDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Field.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CircaValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @if (item.Status == true && item.Accepted == false)
            {
                <div>
                    @Html.ActionLink("Izmjeni", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Obriši", "Delete", new { id = item.Id })
                </div>
            }
            else if (item.Status == true && item.Accepted == true)
            {
                <div>
                    @Html.ActionLink("Dodaj za dostavu", "AddToDelivery", new { id = item.Id })
                </div>
            }

        </td>
    </tr>
}

</table>


