@model UPPHercegovina.WebApplication.Models.PersonProduct

@{
    ViewBag.Title = "Dodaj novi proizvod";
    Layout = "~/Views/Shared/_LayoutPageUser.cshtml";
}

<h2>Prijavi za skladište</h2>

@using (Html.BeginForm()) 
{
