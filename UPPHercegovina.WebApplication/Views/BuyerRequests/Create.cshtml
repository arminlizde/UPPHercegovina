@model UPPHercegovina.WebApplication.Models.BuyerRequest

@{
    ViewBag.Title = "Zahtjev / Nakupac";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

<script src="/resources/demos/external/jquery-mousewheel/jquery.mousewheel.js"></script>

<h2>Dodaj novi zahtjev</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Zahtjev nakupca</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateOfPickUp, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateOfPickUp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOfPickUp, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<script type="text/javascript">
            $(function () { // will trigger when the document is ready
                $('.datepicker').datepicker(); //Initialise any date pickers
            });
        </script>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Potvrdi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            <label>Proizvod</label>
        </th>
        <th>
            <label>Proizvođač</label>
        </th>
        <th>
            <label>Skladište</label>
        </th>
        <th>
            <label>Datum branja</label>
        </th>
        <th>
            <label>Cijena</label>
        </th>
        <th>
            <label>Neto</label>
        </th>
        <th>
            <label>Bruto</label>
        </th>
        <th>
            <label>Kvalitet</label>
        </th>

        <th></th>
    </tr>

    @foreach (var item in ViewBag.PersonProducts)
    {
        <tr>

            <td>
                <label>@item.Product.Name</label>
            </td>
            <td>
                <label>@item.User.FullName</label>

            </td>
            <td>
                <label>@item.Warehouse1.Name</label>
            </td>
            <td>
                <label>@item.HarvestDate</label>
            </td>
            <td>
                <label>@item.Value</label>
            </td>
            <td>
                <label>@item.Neto</label>
            </td>
            <td>
                <label>@item.Bruto</label>
            </td>
            <td>
                <label>@item.Quality</label>
            </td>

            <td>
                @Html.ActionLink("Ukloni", "RemoveReservedProducts", new { id = item.Id }) |
                @Html.ActionLink("Detalji", "ProductDetails", new { id = item.Id })
            </td>
        </tr>
    }

</table>


<div>
    @Html.ActionLink("Nazad na listu", "Index")
</div>
<script>
    $("#DateOfPickUp").datepicker({
        dateFormat: 'mm-dd-yy'
    });
</script>