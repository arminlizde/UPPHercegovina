@model UPPHercegovina.WebApplication.Models.Township

@{
    ViewBag.Title = "Dodaj / Općinu";
}

<h2>Unesi novu općinu</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Općine</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
         
            <label class="control-label col-md-2">Naziv općine</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "naziv općine" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        @{
                 var items = new SelectList(new[]
                   {
                       new SelectListItem {Text = "Federacija Bosne i Hercegovine", Value = "Federacija Bosne i Hercegovine"},
                       new SelectListItem {Text = "Republika Srpska", Value = "Republika Srpska"},
                   }, "Text", "Value");           
        }
        <div class="form-group">
            <label class="control-label col-md-2">Entitet</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Entity, @items, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Entity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Unesi općinu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad na listu", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
