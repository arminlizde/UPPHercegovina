@model IEnumerable<UPPHercegovina.WebApplication.Models.Township>

@{
    ViewBag.Title = "Općine";
}

<h2>Općine članice udruženja poljuprivrednih proizvođača Hercegovina</h2>

<p>
    @Html.ActionLink("Dodaj novu općinu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Naziv općine</label>
        </th>
        <th>
            <label>Entitet</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Entity)
        </td>
        <td>
            @Html.ActionLink("Izmjeni", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
